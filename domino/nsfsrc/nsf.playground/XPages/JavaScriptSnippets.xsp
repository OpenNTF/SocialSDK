	<xp:scriptBlock>
		<xp:this.value><![CDATA[function loadFromHash() {
	if(dojo.hash()) {
		var obj = dojo.queryToObject(dojo.hash());
		if(obj.env) {
			dojo.byId(pageGlobal.cbEnv).value = obj.env;
		}
		if(obj.jsLib) {
			dojo.byId(pageGlobal.cbLibrary).value = obj.jsLib;
		}
		if(obj.snippet) {
			setTimeout(function() {loadSnippet(obj.snippet)});
		} 
	} else {
		createSnippet();
	}
}
dojo.addOnLoad( function() {	
	dojo.subscribe("/dojo/hashchange",loadFromHash);
	if(dojo.hash()) {
		loadFromHash()
	}
})
]]></xp:this.value>
	</xp:scriptBlock>

